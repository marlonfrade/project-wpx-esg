---
import LogoWpx from "/assets/logo.svg";
import InstagramIcon from "/assets/instagram-icon.svg";
import LinkedinIcon from "/assets/linkedin-icon.svg";
---

<footer
  class="mx-auto max-w-screen-xl px-4 md:px-8 divide-y dark:bg-gray-800 dark:text-gray-100"
>
  <div
    class="container flex flex-col justify-center py-10 mx-auto space-y-8 lg:flex-row lg:justify-between lg:space-y-0"
  >
    <div class="lg:w-1/3">
      <a
        rel="noopener noreferrer"
        href="#"
        class="flex justify-center space-x-3 lg:justify-start"
      >
        <img src={LogoWpx} alt="Logo WPX" />
      </a>
    </div>

    <div class="space-y-3">
      <div class="uppercase text-center lg:text-start dark:text-gray-50">
        Mídias Sociais
      </div>
      <div class="flex justify-center lg:justify-start space-x-2">
        <a href="https://www.linkedin.com/company/wpx/" target="_blank">
          <img
            class="w-10 h-10cursor-pointer"
            src={LinkedinIcon}
            alt="linkedin"
          /></a
        >
        <a href="https://www.instagram.com/wpxlocacao/" target="_blank">
          <img
            class="w-10 h-10cursor-pointer"
            src={InstagramIcon}
            alt="instagram"
          /></a
        >
      </div>
    </div>
  </div>
  <div class="py-6 text-sm text-center dark:text-gray-400">
    © 2023 WPX. <a href="https://monkeybranch.dev" class="text-primaryBlue"
      >Desenvolvido por MonkeyBranch.</a
    >
  </div>
</footer>
