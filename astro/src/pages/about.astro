---
import Layout from "../layouts/Page.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import VideoBg from "/assets/hero-video-wpx.mp4";
import WpxAboutBg from "/assets/wpx-about.jpeg";
import WpxMission from "/assets/wpx-mission.svg";
import WpxVision from "/assets/wpx-vision.svg";
import WpxValues from "/assets/wpx-values.svg";

const seo = {
  title: "Sobre a WPX",
  description:
    "Ex anim fugiat cillum occaecat dolor minim sit exercitation consectetur ut laborum ea magna cillum nulla.",
};
---

<Layout seo={seo}>
  <Header />
  <div class="w-full h-full my-20">
    <section>
      <div class="bg-primaryBlue">
        <div
          class="container flex flex-col items-center px-4 py-16 pb-24 mx-auto text-center lg:pb-56 md:py-32 md:px-10 lg:px-32 text-gray-900"
        >
          <h1
            class="text-5xl font-bold leading-none sm:text-6xl xl:max-w-3xl text-gray-50"
          >
            Estamos criando o futuro do Setor.
          </h1>
          <p class="mt-6 mb-8 text-lg sm:mb-12 xl:max-w-3xl text-gray-50">
            Investimentos em tecnologia e desenvolvimento de sistemas de gestão
            de processos logísticos e sustentáveis são o foco atual da WPX.
          </p>
          <div class="flex flex-wrap justify-center">
            <a
              href="https://wpxlocacao.com.br"
              class="px-8 py-3 m-2 text-lg font-semibold rounded bg-gray-100 text-gray-900 cursor-pointer"
              >Visite Nosso Site!</a
            >
            <!-- <button
              type="button"
              class="px-8 py-3 m-2 text-lg border rounded border-gray-300 text-gray-50"
              >Learn more</button
            > -->
          </div>
        </div>
      </div>
      <video
        class="w-5/6 mx-auto mb-12 -mt-20 rounded-lg shadow-md lg:-mt-40 bg-gray-500"
        loop
        autoplay
        muted
      >
        <source src={VideoBg} type="video/mp4" />
      </video>
    </section>
